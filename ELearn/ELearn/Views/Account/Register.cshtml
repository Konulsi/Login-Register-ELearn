@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Untitled</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/css/main.css">

</head>

<body>
    <div class="container my-5">
        <div class="register-photo ">
            <div class="form-container my-5">

                <div class="text-danger" asp-validation-summary="All"></div>

                <form method="post" asp-action="Register">
                    <h2 class="text-center"><strong>Register</strong></h2>
                    <div class="form-group"><input class="form-control" name="fullname" asp-for="FullName" placeholder="Fullname"></div>
                    <span class="text-danger" asp-validation-for="FullName"></span>

                    <div class="form-group"><input class="form-control" name="email" asp-for="Email" placeholder="Email"></div>
                    <span class="text-danger" asp-validation-for="Email"></span>

                    <div class="form-group"><input class="form-control" name="username" asp-for="Username" placeholder="Username"></div>
                    <span class="text-danger" asp-validation-for="Username"></span>

                    <div class="form-group"><input class="form-control" name="password" asp-for="Password" placeholder="Password"></div>
                    <span class="text-danger" asp-validation-for="Password"></span>

                    <div class="form-group"><input class="form-control" name="comfirmpassword" asp-for="ComfirmPassword" placeholder="Password (repeat)"></div>
                    <span class="text-danger" asp-validation-for="ComfirmPassword"></span>

                    <div class="form-group">
                        <div class="form-check"><label class="form-check-label"><input class="form-check-input" type="checkbox">Remember me</label></div>
                    </div>
                    <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Register</button></div><a asp-controller="Account" asp-action="Register" class="already"></a>
                </form>
            </div>
        </div>
    </div>
 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
</body>

</html>

